<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_hive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tanisha.busy_bees_capstone_project.AddHive">

    <TextView
        android:text="Add Hive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblAddHive"
        android:textSize="36sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_above="@+id/lblHiveName"
        android:layout_toRightOf="@+id/txtInstallationDate"
        android:layout_toEndOf="@+id/txtInstallationDate" />

    <TextView
        android:text="Hive Configuration"
        android:id="@+id/lblHiveConfiguration"
        android:textSize="18sp"
        android:layout_height="50dp"
        android:layout_width="110dp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/txtYearBeesWereSourced"
        android:layout_alignStart="@+id/lblYearBeesWereSourced" />

    <TextView
        android:text="Hive Type"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblHiveType"
        android:textSize="18sp"
        android:layout_below="@+id/lblHiveName"
        android:layout_alignStart="@+id/lblHiveName"
        android:layout_marginTop="12dp" />

    <EditText
        android:layout_height="50dp"
        android:inputType="none"
        android:text=""
        android:ems="10"
        android:id="@+id/txtHiveType"
        android:layout_width="150dp"
        android:layout_alignTop="@+id/lblHiveType"
        android:layout_alignStart="@+id/txtHiveName" />

    <EditText
        android:layout_height="50dp"
        android:inputType="none"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtYearBeesWereSourced"
        android:layout_width="150dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/lblSplitType"
        android:layout_alignStart="@+id/txtHiveConfiguration" />

    <TextView
        android:text="Year Bees Were Sourced"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/lblYearBeesWereSourced"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/txtYearBeesWereSourced"
        android:layout_alignStart="@+id/lblSplitType" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddHiveCancel"
        android:layout_alignTop="@+id/btnAddHiveConfirm"
        android:layout_toEndOf="@+id/lblHiveConfiguration"/>

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddHiveBack"
        android:layout_alignTop="@+id/btnAddHiveCancel"
        android:layout_alignEnd="@+id/txtHiveConfiguration"
        />

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/txtHiveName"
        android:layout_width="150dp"
        android:layout_alignTop="@+id/lblHiveName"
        android:layout_alignStart="@+id/txtYearBeesWereSourced" />

    <TextView
        android:text="Hive Name"
        android:layout_width="100dp"
        android:id="@+id/lblHiveName"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:layout_marginTop="143dp"
        android:layout_marginLeft="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/lblAddHive"
        android:layout_marginEnd="20dp" />

    <TextView
        android:text="Split Type"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblSplitType"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/lblHiveType"
        android:layout_alignStart="@+id/lblHiveType" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtSplitType"
        android:layout_alignStart="@+id/btnAddHiveCancel"
        android:layout_alignTop="@+id/lblSplitType"
        android:layout_above="@+id/lblYearBeesWereSourced"
        android:layout_alignEnd="@+id/txtHiveType"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:inputType="none"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtHiveConfiguration"
        android:layout_marginLeft="125dp"
        android:layout_marginStart="31dp"
        android:layout_alignTop="@+id/lblHiveConfiguration"
        android:layout_alignStart="@+id/btnAddHiveCancel" />

    <Button
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddHiveConfirm"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/lblHiveConfiguration"
        android:layout_alignStart="@+id/lblHiveConfiguration" />

    <TextView
        android:text="Hive "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:id="@+id/lblHive"
        android:textSize="36sp"
        android:inputType="none"
        android:layout_above="@+id/txtHiveName"
        android:layout_alignStart="@+id/lblHiveName" />

</RelativeLayout>
