<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hives"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tanisha.busy_bees_capstone_project.Hives">


    <TextView
        android:text="Hives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHives"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/hivesListView"
        android:layout_marginStart="157dp" />

    <TextView
        android:text="Hive Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hivesListView"
        android:layout_toEndOf="@+id/hivesListView"
        android:layout_marginStart="36dp"
        android:id="@+id/lblHiveName" />

    <TextView
        android:text="Hive Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblHiveName"
        android:layout_alignStart="@+id/lblHiveName"
        android:layout_marginTop="25dp"
        android:id="@+id/lblHiveType" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_alignTop="@+id/lblHiveType"
        android:layout_alignStart="@+id/txtHives"
        android:id="@+id/editText3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txtHiveName"
        android:layout_alignBaseline="@+id/lblHiveName"
        android:layout_alignBottom="@+id/lblHiveName"
        android:layout_toEndOf="@+id/lblHiveConfig" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_alignBottom="@+id/editText3"
        android:layout_alignEnd="@+id/txtHiveName"
        android:id="@+id/txtSplitType" />

    <TextView
        android:text="Split Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblSplitType"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/lblHiveType"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_alignTop="@+id/lblSplitType"
        android:layout_alignEnd="@+id/editText3"
        android:id="@+id/txtSplitType" />

    <TextView
        android:text="Year Bees Were Sourced"
        android:layout_height="50dp"
        android:id="@+id/lblYearBeesWereSourced"
        android:layout_width="100dp"
        android:layout_alignBaseline="@+id/txtYearBeesWereSourced"
        android:layout_alignBottom="@+id/txtYearBeesWereSourced"
        android:layout_alignStart="@+id/lblSplitType" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txtYearBeesWereSourced"
        android:layout_below="@+id/txtSplitType"
        android:layout_toEndOf="@+id/txtHives" />

    <ListView
        android:id="@+id/hivesListView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/txtHives"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Hive Configuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblHiveConfig"
        android:layout_alignBaseline="@+id/btnAddHive"
        android:layout_alignBottom="@+id/btnAddHive"
        android:layout_toStartOf="@+id/txtSplitType" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/lblYearBeesWereSourced"
        android:layout_alignStart="@+id/txtYearBeesWereSourced"
        android:id="@+id/txtHiveConfiguration" />

    <ListView
        style="@style/Widget.AppCompat.ListView"
        android:id="@+id/lvHiveListOfBoxes"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:layout_below="@+id/btnAddHive"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:text="Box Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lvHiveListOfBoxes"
        android:layout_alignStart="@+id/lblYearBeesWereSourced"
        android:id="@+id/lblBoxType" />

    <TextView
        android:text="Number of Frames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/lblNumberOfFrames"
        android:layout_below="@+id/lblBoxType"
        android:layout_alignStart="@+id/lblBoxType" />

    <TextView
        android:text="Frame Material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/lblFrameMaterial"
        android:layout_below="@+id/lblNumberOfFrames"
        android:layout_alignStart="@+id/lblNumberOfFrames" />

    <TextView
        android:text="Installation Date "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvHiveListOfBoxes"
        android:layout_alignStart="@+id/lblHiveConfig"
        android:id="@+id/lblInstallationDate" />

    <TextView
        android:text="Honey Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAddListBox"
        android:layout_alignStart="@+id/lblInstallationDate"
        android:id="@+id/lblHoneyWeight" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txtBoxType"
        android:layout_above="@+id/lblNumberOfFrames"
        android:layout_alignStart="@+id/txtHiveConfiguration" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/txtBoxType"
        android:layout_alignStart="@+id/txtBoxType"
        android:layout_marginTop="20dp"
        android:id="@+id/txtNumberFrames" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_alignTop="@+id/lblFrameMaterial"
        android:layout_alignEnd="@+id/txtNumberFrames"
        android:id="@+id/txtFrameMaterial" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_alignTop="@+id/lblInstallationDate"
        android:layout_alignStart="@+id/txtFrameMaterial"
        android:id="@+id/txtInstallationDate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_alignTop="@+id/lblHoneyWeight"
        android:layout_alignStart="@+id/txtInstallationDate"
        android:id="@+id/txtHoneyWeight" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRecordListBack"
        android:layout_marginRight="14dp"
        android:layout_below="@+id/txtHoneyWeight"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="48dp" />

    <Button
        android:text="Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEdit"
        android:layout_marginLeft="14dp"
        android:layout_alignBaseline="@+id/btnRecordListBack"
        android:layout_alignBottom="@+id/btnRecordListBack"
        android:layout_toStartOf="@+id/btnRecordListBack"
        android:layout_marginEnd="21dp" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEditQueenConfirm"
        android:layout_marginLeft="21dp"
        android:layout_alignBaseline="@+id/btnEdit"
        android:layout_alignBottom="@+id/btnEdit"
        android:layout_toEndOf="@+id/lblHiveName" />

    <Button
        android:text="Add Hive"
        android:id="@+id/btnAddHive"
        android:textSize="18sp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:layout_alignBaseline="@+id/txtHiveConfiguration"
        android:layout_alignBottom="@+id/txtHiveConfiguration"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add Box"
        android:id="@+id/btnAddListBox"
        android:textSize="18sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnReplaceQueenConfirm"
        android:layout_alignBaseline="@+id/btnEditQueenConfirm"
        android:layout_alignBottom="@+id/btnEditQueenConfirm"
        android:layout_toStartOf="@+id/btnEditQueenConfirm" />


</RelativeLayout>
