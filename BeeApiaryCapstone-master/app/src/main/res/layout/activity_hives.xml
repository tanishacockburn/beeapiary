<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hives"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tanisha.busy_bees_capstone_project.Hives">

    <TextView
        android:text="TextView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/text"
        android:textSize="18sp"
        android:layout_marginLeft="163dp"
        android:layout_marginStart="163dp"
        android:layout_below="@+id/lblFrameMaterial"
        android:layout_toRightOf="@+id/lblFrameMaterial"
        android:layout_toEndOf="@+id/lblFrameMaterial"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtSplitType"
        android:layout_below="@+id/lblYearBeesWereSourced"
        android:layout_toLeftOf="@+id/lvHiveListOfBoxes"
        android:layout_toStartOf="@+id/lvHiveListOfBoxes" />

    <TextView
        android:text="Hive Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblAddHive"
        android:textSize="36sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtYearBeesWereSourced"
        android:layout_width="150dp"
        android:layout_alignTop="@+id/lblYearBeesWereSourced"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Hive Name"
        android:layout_width="100dp"
        android:id="@+id/lblHiveName"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:layout_alignTop="@+id/hivesListView"
        android:layout_alignLeft="@+id/lblSplitType"
        android:layout_alignStart="@+id/lblSplitType" />

    <TextView
        android:text="Year Bees Were Sourced"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/lblYearBeesWereSourced"
        android:textSize="18sp"
        android:layout_alignTop="@+id/txtHiveName"
        android:layout_alignLeft="@+id/lblHiveConfiguration"
        android:layout_alignStart="@+id/lblHiveConfiguration" />

    <ListView
        android:id="@+id/hivesListView"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:layout_below="@+id/lblAddHive"
        android:layout_toRightOf="@+id/txtSplitType"
        android:layout_toEndOf="@+id/txtSplitType" />

    <TextView
        android:text="Box Type"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblBoxType"
        android:textSize="18sp"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_alignBottom="@+id/lblHiveListOfBoxes"
        android:layout_toRightOf="@+id/lvHiveListOfBoxes"
        android:layout_toEndOf="@+id/lvHiveListOfBoxes"
        android:layout_alignTop="@+id/lblHiveListOfBoxes" />

    <TextView
        android:text="Hive Type"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblHiveType"
        android:textSize="18sp"
        android:layout_below="@+id/lblHiveName"
        android:layout_alignLeft="@+id/lblHiveName"
        android:layout_alignStart="@+id/lblHiveName" />

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtHiveName"
        android:layout_width="150dp"
        android:layout_alignBaseline="@+id/lblHiveName"
        android:layout_alignBottom="@+id/lblHiveName"
        android:layout_toRightOf="@+id/lblHiveName"
        android:layout_toEndOf="@+id/lblHiveName" />

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtHiveType"
        android:layout_width="150dp"
        android:layout_below="@+id/txtHiveName"
        android:layout_toRightOf="@+id/lblHiveName"
        android:layout_toEndOf="@+id/lblHiveName" />

    <TextView
        android:text="Split Type"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblSplitType"
        android:textSize="18sp"
        android:layout_below="@+id/txtSplitType"
        android:layout_alignLeft="@+id/lblBoxType"
        android:layout_alignStart="@+id/lblBoxType" />

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtSplitType"
        android:layout_width="150dp"
        android:layout_below="@+id/txtHiveType"
        android:layout_toRightOf="@+id/lblHiveType"
        android:layout_toEndOf="@+id/lblHiveType" />

    <TextView
        android:text="Hive Configuration"
        android:id="@+id/lblHiveConfiguration"
        android:textSize="18sp"
        android:layout_height="50dp"
        android:layout_width="110dp"
        android:layout_alignBaseline="@+id/txtSplitType"
        android:layout_alignBottom="@+id/txtSplitType"
        android:layout_toRightOf="@+id/txtHiveType"
        android:layout_toEndOf="@+id/txtHiveType"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtHiveConfiguration"
        android:layout_alignTop="@+id/lblHiveConfiguration"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="List of Boxes"
        android:layout_height="30dp"
        android:id="@+id/lblHiveListOfBoxes"
        android:textSize="24sp"
        android:layout_width="150dp"
        android:layout_below="@+id/btnAddHive"
        android:layout_toRightOf="@+id/txtSplitType"
        android:layout_toEndOf="@+id/txtSplitType"
        android:layout_marginTop="15dp" />

    <Button
        android:text="Add Hive"
        android:id="@+id/btnAddHive"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"
        android:layout_width="200dp"
        android:layout_below="@+id/hivesListView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        style="@style/Widget.AppCompat.ListView"
        android:id="@+id/lvHiveListOfBoxes"
        android:layout_height="150dp"
        android:layout_width="200dp"
        android:layout_below="@+id/lblHiveListOfBoxes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add Box"
        android:id="@+id/btnAddListBox"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"
        android:layout_width="200dp"
        android:layout_below="@+id/lvHiveListOfBoxes"
        android:layout_toRightOf="@+id/txtSplitType"
        android:layout_toEndOf="@+id/txtSplitType"
        android:layout_marginTop="17dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtFrameMaterial"
        android:layout_below="@+id/lvHiveListOfBoxes"
        android:layout_alignLeft="@+id/txtBoxType"
        android:layout_alignStart="@+id/txtBoxType" />

    <TextView
        android:text="Number of Framrd"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblHiveNumberOfFrames"
        android:textSize="18sp"
        android:layout_below="@+id/lblBoxType"
        android:layout_alignLeft="@+id/lblBoxType"
        android:layout_alignStart="@+id/lblBoxType"
        android:layout_marginTop="24dp" />

    <TextView
        android:text="Installation Date"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblInstallationDate"
        android:textSize="18sp"
        android:layout_below="@+id/lblHiveNumberOfFrames"
        android:layout_alignLeft="@+id/lblHiveNumberOfFrames"
        android:layout_alignStart="@+id/lblHiveNumberOfFrames" />

    <EditText
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtBoxType"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/lblBoxType"
        android:layout_alignLeft="@+id/txtNumberOfFrames"
        android:layout_alignStart="@+id/txtNumberOfFrames" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtInstallationDate"
        android:layout_below="@+id/txtNumberOfFrames"
        android:layout_alignLeft="@+id/txtNumberOfFrames"
        android:layout_alignStart="@+id/txtNumberOfFrames" />

    <TextView
        android:text="TextView"
        android:layout_height="50dp"
        android:id="@+id/txtNumberOfFrames"
        android:layout_width="200dp"
        android:layout_alignBaseline="@+id/lblHiveNumberOfFrames"
        android:layout_alignBottom="@+id/lblHiveNumberOfFrames"
        android:layout_toLeftOf="@+id/txtHiveConfiguration"
        android:layout_toStartOf="@+id/txtHiveConfiguration"
        android:textSize="14sp"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtHoneyWeight"
        android:layout_alignTop="@+id/lblHoneWeight"
        android:layout_alignLeft="@+id/txtFrameMaterial"
        android:layout_alignStart="@+id/txtFrameMaterial" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancel"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/lblHoneWeight"
        android:layout_toRightOf="@+id/lblHiveListOfBoxes"
        android:layout_toEndOf="@+id/lblHiveListOfBoxes"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBack"
        android:layout_alignBaseline="@+id/btnEdit"
        android:layout_alignBottom="@+id/btnEdit"
        android:layout_alignRight="@+id/txtSplitType"
        android:layout_alignEnd="@+id/txtSplitType"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnConfirm"
        android:layout_alignBaseline="@+id/btnCancel"
        android:layout_alignBottom="@+id/btnCancel"
        android:layout_alignRight="@+id/lblHiveListOfBoxes"
        android:layout_alignEnd="@+id/lblHiveListOfBoxes" />

    <TextView
        android:text="Honey Weight"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblHoneWeight"
        android:textSize="18sp"
        android:layout_below="@+id/btnAddListBox"
        android:layout_toLeftOf="@+id/text"
        android:layout_toStartOf="@+id/text" />

    <TextView
        android:text="Frame Material"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblFrameMaterial"
        android:textSize="18sp"
        android:layout_below="@+id/lvHiveListOfBoxes"
        android:layout_alignLeft="@+id/lblInstallationDate"
        android:layout_alignStart="@+id/lblInstallationDate" />

    <Button
        android:text="Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEdit"
        android:layout_alignBaseline="@+id/btnCancel"
        android:layout_alignBottom="@+id/btnCancel"
        android:layout_toRightOf="@+id/btnCancel"
        android:layout_toEndOf="@+id/btnCancel"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />


</RelativeLayout>
