<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_yard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tanisha.busy_bees_capstone_project.Yard">



    <TextView
        android:text="Yard Location"
        android:layout_marginTop="20dp"
        android:id="@+id/lblYardLocation"
        android:layout_height="30dp"
        android:textSize="24sp"
        android:layout_width="200dp"
        android:layout_alignTop="@+id/lvHiveList"
        android:layout_centerHorizontal="true" />


    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:id="@+id/btnYardCancel"
        android:layout_alignBaseline="@+id/btnReplaceQueenConfirm"
        android:layout_alignBottom="@+id/btnReplaceQueenConfirm"
        android:layout_toRightOf="@+id/btnReplaceQueenConfirm"
        android:layout_toEndOf="@+id/btnReplaceQueenConfirm"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimaryDark" />

    <ListView
        android:layout_marginTop="27dp"
        android:id="@+id/lvHiveList"
        android:layout_height="200dp"
        style="@style/Widget.AppCompat.ListView"
        android:layout_width="200dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add Yard"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddYard"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimaryDark"
        android:layout_width="200dp"
        android:layout_alignTop="@+id/txtYardLandDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEditYard"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimaryDark"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_below="@+id/btnAddYard"
        android:layout_alignLeft="@+id/txtYardLandDescription"
        android:layout_alignStart="@+id/txtYardLandDescription"
        android:layout_marginTop="175dp" />

    <TextView
        android:text="Land Description"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/lblLandDescription"

        android:textSize="24sp"
        android:layout_marginBottom="59dp"
        android:layout_alignBottom="@+id/lvHiveList"
        android:layout_alignLeft="@+id/lblYardLocation"
        android:layout_alignStart="@+id/lblYardLocation" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:id="@+id/btnRecordListBack"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/btnEditQueenConfirm"
        android:layout_alignBottom="@+id/btnEditQueenConfirm"
        android:layout_toRightOf="@+id/btnEditQueenConfirm"
        android:layout_toEndOf="@+id/btnEditQueenConfirm" />

    <TextView
        android:text="Yard Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="36sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/lblYardLocation"
        android:layout_alignStart="@+id/lblYardLocation"
        android:layout_marginTop="15dp" />

    <EditText
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txtYardLandDescription"
        style="@style/Widget.AppCompat.EditText"
        android:layout_height="200dp"
        android:layout_width="500dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/lblLandDescription"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtYardLocation"
        style="@style/Widget.AppCompat.EditText"
        android:textSize="18sp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/lblYardLocation"
        android:layout_alignBottom="@+id/lblYardLocation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Location"/>

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDeleteYard"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/btnEditYard"
        android:layout_alignBottom="@+id/btnEditYard"
        android:layout_toEndOf="@+id/btnAddYard"
        android:layout_marginStart="14dp" />

</RelativeLayout>
