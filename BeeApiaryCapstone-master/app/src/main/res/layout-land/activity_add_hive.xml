<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_hive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tanisha.busy_bees_capstone_project.AddHive"


    >


    <TextView
        android:text="TextView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/text"
        android:textSize="18sp"
        android:layout_marginLeft="163dp"
        android:layout_marginStart="163dp"
        android:layout_below="@+id/lblFrameMaterial"
        android:layout_toRightOf="@+id/lblFrameMaterial"
        android:layout_toEndOf="@+id/lblFrameMaterial"
        android:visibility="invisible" />

    <TextView
        android:text="Add Hive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblAddHive"
        android:textSize="36sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="98dp"
        android:layout_marginStart="98dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtSplitType"
        android:layout_toEndOf="@+id/txtSplitType" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBack"
        android:layout_alignBaseline="@+id/lblSplitType"
        android:layout_alignBottom="@+id/lblSplitType"
        android:layout_alignLeft="@+id/txtHiveConfiguration"
        android:layout_alignStart="@+id/txtHiveConfiguration"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <TextView
        android:text="Hive Type"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblHiveType"
        android:textSize="18sp"
        android:layout_alignTop="@+id/txtHiveType"
        android:layout_alignLeft="@+id/lblHiveName"
        android:layout_alignStart="@+id/lblHiveName" />

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtHiveName"
        android:layout_width="150dp"
        android:layout_alignBottom="@+id/txtYearBeesWereSourced"
        android:layout_alignLeft="@+id/txtHiveType"
        android:layout_alignStart="@+id/txtHiveType"
        android:layout_marginBottom="28dp" />

    <TextView
        android:text="Hive Name"
        android:layout_width="100dp"
        android:id="@+id/lblHiveName"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/txtHiveName"
        android:layout_alignBottom="@+id/txtHiveName"
        android:layout_alignLeft="@+id/lblSplitType"
        android:layout_alignStart="@+id/lblSplitType" />

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtHiveType"
        android:layout_width="150dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/btnCancel"
        android:layout_toRightOf="@+id/text"
        android:layout_toEndOf="@+id/text" />

    <TextView
        android:text="Split Type"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblSplitType"
        android:textSize="18sp"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:layout_alignBaseline="@+id/txtSplitType"
        android:layout_alignBottom="@+id/txtSplitType"
        android:layout_toLeftOf="@+id/txtHiveType"
        android:layout_toStartOf="@+id/txtHiveType" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtSplitType"
        android:layout_marginTop="216dp"
        android:layout_below="@+id/text"
        android:layout_alignLeft="@+id/txtHiveType"
        android:layout_alignStart="@+id/txtHiveType" />

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtYearBeesWereSourced"
        android:layout_width="150dp"
        android:layout_alignTop="@+id/lblYearBeesWereSourced"
        android:layout_alignRight="@+id/txtHiveConfiguration"
        android:layout_alignEnd="@+id/txtHiveConfiguration"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <TextView
        android:text="Hive Configuration"
        android:id="@+id/lblHiveConfiguration"
        android:textSize="18sp"
        android:layout_height="50dp"
        android:layout_width="110dp"
        android:layout_alignTop="@+id/txtHiveType"
        android:layout_alignLeft="@+id/lblYearBeesWereSourced"
        android:layout_alignStart="@+id/lblYearBeesWereSourced" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtHiveConfiguration"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_alignTop="@+id/lblHiveConfiguration"
        android:layout_toRightOf="@+id/lblHiveConfiguration"
        android:layout_toEndOf="@+id/lblHiveConfiguration" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancel"
        android:layout_alignTop="@+id/txtSplitType"
        android:layout_toLeftOf="@+id/txtYearBeesWereSourced"
        android:layout_toStartOf="@+id/txtYearBeesWereSourced"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

    <Button
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnConfirm"
        android:layout_alignBaseline="@+id/btnCancel"
        android:layout_alignBottom="@+id/btnCancel"
        android:layout_toLeftOf="@+id/lblHiveConfiguration"
        android:layout_toStartOf="@+id/lblHiveConfiguration" />

    <TextView
        android:text="Year Bees Were Sourced"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/lblYearBeesWereSourced"
        android:textSize="18sp"
        android:layout_above="@+id/lblHiveConfiguration"
        android:layout_toRightOf="@+id/lblAddHive"
        android:layout_toEndOf="@+id/lblAddHive" />


</RelativeLayout>
