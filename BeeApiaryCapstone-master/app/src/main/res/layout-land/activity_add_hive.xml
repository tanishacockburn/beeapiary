<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_hive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tanisha.busy_bees_capstone_project.AddHive"


    >


    <TextView
        android:text="Add Hive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblAddHive"
        android:textSize="36sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_above="@+id/lblHiveName"
        android:layout_toRightOf="@+id/txtInstallationDate"
        android:layout_toEndOf="@+id/txtInstallationDate" />

    <TextView
        android:text="Hive Type"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblHiveType"
        android:textSize="18sp"
        android:layout_below="@+id/lblHiveName"
        android:layout_alignStart="@+id/lblHiveName"
        android:layout_marginTop="12dp" />

    <EditText
        android:layout_height="50dp"
        android:inputType="none"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtHiveType"
        android:layout_width="150dp"
        android:layout_alignTop="@+id/lblHiveType"
        android:layout_alignStart="@+id/txtHiveName"
        android:layout_above="@+id/lblSplitType" />

    <TextView
        android:text="Split Type"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblSplitType"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/lblHiveType"
        android:layout_alignStart="@+id/lblHiveType" />

    <TextView
        android:text="Hive Configuration"
        android:id="@+id/lblHiveConfiguration"
        android:textSize="18sp"
        android:layout_height="50dp"
        android:layout_width="110dp"
        android:layout_alignBaseline="@+id/txtHiveType"
        android:layout_alignBottom="@+id/txtHiveType"
        android:layout_alignStart="@+id/lblYearBeesWereSourced" />

    <TextView
        android:text="Hive "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblHive"
        android:textSize="36sp"
        android:inputType="none"
        android:layout_below="@+id/lblAddHive"
        android:layout_alignStart="@+id/lblHiveName"
        android:layout_marginTop="19dp" />

    <TextView
        android:text="Hive Name"
        android:layout_width="100dp"
        android:id="@+id/lblHiveName"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:layout_marginTop="102dp"
        android:layout_marginLeft="28dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/lblAddHive" />

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtHiveName"
        android:layout_width="150dp"
        android:layout_alignTop="@+id/lblHiveName"
        android:layout_alignStart="@+id/btnCancel" />

    <TextView
        android:text="Year Bees Were Sourced"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/lblYearBeesWereSourced"
        android:textSize="18sp"
        android:layout_marginEnd="102dp"
        android:layout_alignTop="@+id/txtYearBeesWereSourced"
        android:layout_toStartOf="@+id/txtYearBeesWereSourced" />

    <EditText
        android:layout_height="50dp"
        android:inputType="none"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtYearBeesWereSourced"
        android:layout_width="150dp"
        android:layout_marginEnd="173dp"
        android:layout_marginBottom="35dp"
        android:layout_alignBottom="@+id/txtHiveName"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:inputType="none"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtHiveConfiguration"
        android:layout_marginLeft="125dp"
        android:layout_alignTop="@+id/lblHiveConfiguration"
        android:layout_alignEnd="@+id/txtYearBeesWereSourced"
        android:layout_marginEnd="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtSplitType"
        android:layout_below="@+id/lblHiveConfiguration"
        android:layout_alignStart="@+id/txtHiveType" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBack"
        android:layout_marginStart="18dp"
        android:layout_below="@+id/txtSplitType"
        android:layout_toEndOf="@+id/btnCancel" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancel"
        android:layout_below="@+id/txtSplitType"
        android:layout_toEndOf="@+id/lblHiveName" />

    <Button
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnConfirm"
        android:layout_below="@+id/lblSplitType"
        android:layout_alignStart="@+id/lblSplitType" />
</RelativeLayout>
