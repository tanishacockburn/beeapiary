<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_yard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tanisha.busy_bees_capstone_project.AddYard">

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnAddYardConfirm"
        android:layout_toRightOf="@+id/btnAddYardConfirm"
        android:layout_toEndOf="@+id/btnAddYardConfirm"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:id="@+id/btnAddYardCancel" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:id="@+id/btnAddYardBack"
        android:layout_alignBaseline="@+id/btnAddYardCancel"
        android:layout_alignBottom="@+id/btnAddYardCancel"
        android:layout_toRightOf="@+id/btnAddYardCancel"
        android:layout_toEndOf="@+id/btnAddYardCancel" />

    <TextView
        android:text="Add Yard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblAddYard"
        android:textSize="36sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Yard Location"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/lblAddYardYardLocation"
        android:textSize="24sp"
        android:layout_width="200dp"
        android:layout_below="@+id/lblAddYard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Land Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/lblAddYardLandDescription"
        android:textSize="24sp"
        android:layout_below="@+id/lblAddYardYardLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txtAddYardLandDescription"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="600dp"
        android:layout_below="@+id/txtAddYardYardLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_height="50dp" />

    <EditText
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtAddYardYardLocation"
        android:layout_height="50dp"
        android:textSize="24sp"
        android:layout_width="600dp"
        android:layout_alignBottom="@+id/lblAddYardYardLocation"
        android:layout_alignLeft="@+id/txtAddYardLandDescription"
        android:layout_alignStart="@+id/txtAddYardLandDescription" />

    <Button
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddYardConfirm"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/txtAddYardLandDescription"
        android:layout_alignLeft="@+id/txtAddYardLandDescription"
        android:layout_alignStart="@+id/txtAddYardLandDescription" />
</RelativeLayout>
