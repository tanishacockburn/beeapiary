<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_record_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tanisha.busy_bees_capstone_project.RecordList">

    <TextView
        android:text="Hives"
        android:layout_width="100dp"
        android:id="@+id/lblHives"
        android:textSize="24sp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/lblIncpections"
        android:layout_alignLeft="@+id/lvlHives"
        android:layout_alignStart="@+id/lvlHives"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <ListView
        android:layout_height="200dp"
        android:id="@+id/lvlHives"
        android:layout_marginLeft="98dp"
        android:layout_marginStart="98dp"
        android:layout_below="@+id/lblHives"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="200dp" />

    <TextView
        android:text="Record List "
        android:id="@+id/lblRecordList"
        android:textSize="24sp"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_above="@+id/lvlHives"
        android:layout_alignLeft="@+id/lvInspectionList"
        android:layout_alignStart="@+id/lvInspectionList" />

    <Button
        android:text="Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEdit"
        android:layout_below="@+id/lvInspectionList"
        android:layout_alignLeft="@+id/lvInspectionList"
        android:layout_alignStart="@+id/lvInspectionList" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/btnReplaceQueenConfirm"
        android:layout_below="@+id/lvInspectionList"
        android:layout_toRightOf="@+id/btnEdit"
        android:layout_toEndOf="@+id/btnEdit" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEditQueenEdit"
        android:layout_alignBaseline="@+id/btnEditQueenBack"
        android:layout_alignBottom="@+id/btnEditQueenBack"
        android:layout_toRightOf="@+id/btnReplaceQueenConfirm"
        android:layout_toEndOf="@+id/btnReplaceQueenConfirm"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEditQueenBack"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_below="@+id/lvInspectionList"
        android:layout_toRightOf="@+id/btnEditQueenEdit"
        android:layout_toEndOf="@+id/btnEditQueenEdit" />

    <ListView
        android:layout_height="200dp"
        android:id="@+id/lvInspectionList"
        android:layout_width="500dp"
        android:layout_below="@+id/lblRecordList"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <Button
        android:text="Add Inspection"
        android:layout_height="50dp"
        android:id="@+id/btnAddInspection"
        android:layout_below="@+id/lvlHives"
        android:layout_alignLeft="@+id/lvlHives"
        android:layout_alignStart="@+id/lvlHives"
        android:layout_width="200dp" />

    <TextView
        android:text="Inpections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:id="@+id/lblIncpections"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/lblHives" />
</RelativeLayout>
