        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/lVHiveList"
        android:layout_width="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
-->


    <ListView
        android:layout_marginTop="17dp"
        android:id="@+id/lVHiveList"
        android:layout_height="200dp"
        android:layout_width="300dp"
        style="@style/Widget.AppCompat.ListView"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btbAddYard"
        android:layout_alignEnd="@+id/btbAddYard"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_above="@+id/btnEditYard" />

    <TextView
        android:text="Yard Location"
        android:id="@+id/lblYardLocation"
        android:layout_height="30dp"
        android:textSize="24sp"
        android:layout_width="200dp"
        android:layout_alignBaseline="@+id/txtYardLocation"
        android:layout_alignBottom="@+id/txtYardLocation"
        android:layout_toRightOf="@+id/lVHiveList"
        android:layout_toEndOf="@+id/lVHiveList" />

    <EditText
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txtYardLandDescription"
        style="@style/Widget.AppCompat.EditText"
        android:singleLine="false"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/lblLandDescription"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Add Yard"
        android:id="@+id/btbAddYard"
        android:layout_width="300dp"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/lVHiveList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_height="40dp" />

    <EditText
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtYardLocation"
        style="@style/Widget.AppCompat.EditText"
        android:textSize="18sp"
        android:layout_height="50dp"
        android:layout_width="600dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBack"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimaryDark"
        android:layout_marginRight="73dp"
        android:layout_marginEnd="73dp"
        android:layout_below="@+id/txtYardLandDescription"
        android:layout_alignRight="@+id/txtYardLocation"
        android:layout_alignEnd="@+id/txtYardLocation" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancel"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/txtYardLandDescription"
        android:layout_toLeftOf="@+id/btnBack"
        android:layout_toStartOf="@+id/btnBack"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDelete"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/txtYardLandDescription"
        android:layout_toLeftOf="@+id/btnCancel"
        android:layout_toStartOf="@+id/btnCancel"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <Button
        android:text="Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEditYard"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/txtYardLandDescription"
        android:layout_toLeftOf="@+id/btnDelete"
        android:layout_toStartOf="@+id/btnDelete"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <TextView
        android:text="Land Description"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/lblLandDescription"

        android:textSize="24sp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/txtYardLocation"
        android:layout_toRightOf="@+id/lVHiveList"
        android:layout_toEndOf="@+id/lVHiveList" />

    <TextView
        android:text="Yard Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="36sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lVHiveList"
        android:layout_toEndOf="@+id/lVHiveList" />
</RelativeLayout>
