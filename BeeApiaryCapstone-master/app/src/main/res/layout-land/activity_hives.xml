<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hives"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tanisha.busy_bees_capstone_project.Hives">


    <TextView
        android:text="TextView"
        android:layout_height="50dp"
        android:id="@+id/txtSplitType"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/lblSplitType"
        android:layout_alignBottom="@+id/lblSplitType"
        android:layout_alignLeft="@+id/txtHiveName"
        android:layout_alignStart="@+id/txtHiveName"
        android:layout_width="160dp" />

    <ListView
        android:id="@+id/hivesListView"
        android:layout_height="200dp"
        android:layout_width="300dp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_below="@+id/lblHiveDetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_height="50dp"
        android:id="@+id/txtHiveType"
        android:textSize="18sp"
        android:layout_width="160dp"
        android:layout_below="@+id/txtHiveName"
        android:layout_alignLeft="@+id/txtHiveName"
        android:layout_alignStart="@+id/txtHiveName" />

    <ListView
        android:layout_width="300dp"
        android:layout_height="200dp"
        style="@style/Widget.AppCompat.ListView"
        android:id="@+id/lvHiveListOfBoxes"
        android:layout_above="@+id/btnAddBox"
        android:layout_alignLeft="@+id/lblHiveListOfBoxes"
        android:layout_alignStart="@+id/lblHiveListOfBoxes" />

    <TextView
        android:text="Hive Type"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblHiveType"
        android:textSize="18sp"
        android:layout_marginBottom="11dp"
        android:layout_alignBottom="@+id/txtHiveType"
        android:layout_alignLeft="@+id/lblHiveName"
        android:layout_alignStart="@+id/lblHiveName" />

    <TextView
        android:text="Number of Framrd"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblHiveNumberOfFrames"
        android:textSize="18sp"
        android:layout_below="@+id/txtHiveBoxType"
        android:layout_alignLeft="@+id/lblBoxType"
        android:layout_alignStart="@+id/lblBoxType" />

    <TextView
        android:text="Hive Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblHiveDetails"
        android:textSize="36sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/hivesListView"
        android:layout_alignStart="@+id/hivesListView" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="98dp"
        android:layout_marginEnd="98dp" />

    <TextView
        android:text="Hive Name"
        android:layout_width="100dp"
        android:id="@+id/lblHiveName"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_alignBaseline="@+id/lblHiveDetails"
        android:layout_alignBottom="@+id/lblHiveDetails"
        android:layout_toRightOf="@+id/hivesListView"
        android:layout_toEndOf="@+id/hivesListView" />

    <TextView
        android:text="TextView"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/txtHiveConfiguration"
        android:textSize="18sp"
        android:layout_below="@+id/txtSplitType"
        android:layout_alignLeft="@+id/txtSplitType"
        android:layout_alignStart="@+id/txtSplitType"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="Split Type"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblSplitType"
        android:textSize="18sp"
        android:layout_below="@+id/txtHiveType"
        android:layout_alignLeft="@+id/lblHiveType"
        android:layout_alignStart="@+id/lblHiveType" />

    <TextView
        android:text="Hive Configuration"
        android:layout_width="100dp"
        android:id="@+id/lblHiveConfiguration"
        android:textSize="18sp"
        android:layout_height="50dp"
        android:layout_below="@+id/lblSplitType"
        android:layout_alignLeft="@+id/lblSplitType"
        android:layout_alignStart="@+id/lblSplitType" />

    <TextView
        android:text="Honey Weight"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblHoneWeight"
        android:textSize="18sp"
        android:layout_above="@+id/btnEdit"
        android:layout_alignLeft="@+id/lblInstallationDate"
        android:layout_alignStart="@+id/lblInstallationDate" />

    <TextView
        android:text="Year Bees Were Sourced"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/lblYearBeesWereSourced"
        android:textSize="18sp"
        android:layout_below="@+id/txtHiveConfiguration"
        android:layout_alignLeft="@+id/lblHiveConfiguration"
        android:layout_alignStart="@+id/lblHiveConfiguration" />

    <TextView
        android:text="TextView"
        android:layout_height="50dp"
        android:id="@+id/txtHiveName"
        android:textSize="18sp"
        android:layout_width="160dp"
        android:layout_alignBaseline="@+id/lblHiveName"
        android:layout_alignBottom="@+id/lblHiveName"
        android:layout_alignRight="@+id/btnCancel"
        android:layout_alignEnd="@+id/btnCancel"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <TextView
        android:text="Installation Date"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblInstallationDate"
        android:textSize="18sp"
        android:layout_below="@+id/lblFrameMaterial"
        android:layout_alignLeft="@+id/lblFrameMaterial"
        android:layout_alignStart="@+id/lblFrameMaterial"
        android:layout_marginTop="11dp" />

    <Button
        android:text="Add Hive"
        android:id="@+id/btnAddHive"
        android:layout_height="50dp"
        android:layout_width="300dp"
        android:textSize="18sp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"
        android:layout_alignTop="@+id/lblYearBeesWereSourced"
        android:layout_alignLeft="@+id/hivesListView"
        android:layout_alignStart="@+id/hivesListView" />

    <TextView
        android:text="List of Boxes"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:id="@+id/lblHiveListOfBoxes"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/lblBoxType"
        android:layout_alignBottom="@+id/lblBoxType"
        android:layout_alignLeft="@+id/btnAddHive"
        android:layout_alignStart="@+id/btnAddHive"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <Button
        android:text="Add Box"
        android:id="@+id/btnAddListBox"
        android:layout_height="50dp"
        android:layout_width="300dp"
        android:textSize="18sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="16dp"
        android:layout_alignTop="@+id/lblHoneWeight"
        android:layout_alignLeft="@+id/btnAddHive"
        android:layout_alignStart="@+id/btnAddHive" />

    <TextView
        android:text="Box Type"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblBoxType"
        android:textSize="18sp"
        android:layout_below="@+id/lblYearBeesWereSourced"
        android:layout_alignLeft="@+id/lblYearBeesWereSourced"
        android:layout_alignStart="@+id/lblYearBeesWereSourced"
        android:layout_marginTop="14dp" />

    <TextView
        android:text="TextView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/txtHiveBoxType"
        android:textSize="18sp"
        android:layout_alignTop="@+id/lblHiveListOfBoxes"
        android:layout_alignLeft="@+id/txtYearBeesWereSourced"
        android:layout_alignStart="@+id/txtYearBeesWereSourced" />

    <TextView
        android:text="TextView"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/txtYearBeesWereSourced"
        android:textSize="18sp"
        android:layout_below="@+id/hivesListView"
        android:layout_alignLeft="@+id/txtHiveConfiguration"
        android:layout_alignStart="@+id/txtHiveConfiguration" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancel"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/text"
        android:layout_alignStart="@+id/text"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDelete"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/text"
        android:layout_toStartOf="@+id/text" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHiveFrameMaterial"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/lblFrameMaterial"
        android:layout_alignBottom="@+id/lblFrameMaterial"
        android:layout_alignLeft="@+id/txtNumberOfFrames"
        android:layout_alignStart="@+id/txtNumberOfFrames" />

    <TextView
        android:text="TextView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/text"
        android:textSize="18sp"
        android:layout_marginLeft="163dp"
        android:layout_marginStart="163dp"
        android:layout_below="@+id/lblFrameMaterial"
        android:layout_toRightOf="@+id/lblFrameMaterial"
        android:layout_toEndOf="@+id/lblFrameMaterial"
        android:visibility="invisible" />

    <TextView
        android:text="Frame Material"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lblFrameMaterial"
        android:textSize="18sp"
        android:layout_below="@+id/txtNumberOfFrames"
        android:layout_alignLeft="@+id/lblHiveNumberOfFrames"
        android:layout_alignStart="@+id/lblHiveNumberOfFrames" />

    <TextView
        android:text="TextView"
        android:layout_height="50dp"
        android:id="@+id/txtInstallationDate"
        android:layout_alignTop="@+id/lblInstallationDate"
        android:layout_alignLeft="@+id/txtHiveFrameMaterial"
        android:layout_alignStart="@+id/txtHiveFrameMaterial"
        android:layout_width="100dp" />

    <Button
        android:text="Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEdit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblHoneWeight"
        android:layout_alignLeft="@+id/txtInstallationDate"
        android:layout_alignStart="@+id/txtInstallationDate"
        android:id="@+id/txtHoneyWeight" />

    <TextView
        android:text="TextView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/txtNumberOfFrames"
        android:textSize="18sp"
        android:layout_below="@+id/lblBoxType"
        android:layout_alignLeft="@+id/txtHiveBoxType"
        android:layout_alignStart="@+id/txtHiveBoxType" />


</RelativeLayout>
