<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_edit_yard2"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.example.tanisha.busy_bees_capstone_project.EditYard"
              android:weightSum="1">


    <TextView
        android:text="Yard Location"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="25dp"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rllanddesc">

        <TextView
            android:text="Land Description"
            android:layout_height="30dp"
            android:id="@+id/lblLandDescription"

            android:textSize="20sp"
            android:layout_width="170dp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_marginTop="149dp"
            android:layout_alignStart="@+id/lblYardLocation"
            android:layout_toStartOf="@+id/btnEditYardBack"/>

        <TextView
            android:text="Location"
            android:layout_height="30dp"
            android:layout_width="110dp"
            android:id="@+id/lblYardLocation"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginEnd="54dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/txtYardLocation"
            android:layout_marginTop="54dp"/>

        <EditText
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtYardLocation"
            style="@style/Widget.AppCompat.EditText"
            android:textSize="12sp"
            android:layout_height="30dp"
            android:layout_width="364dp"
            android:background="@drawable/edittextstyle"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@+id/lblYardLocation"
            android:layout_alignStart="@+id/btnEditYardBack"
            android:layout_marginBottom="10dp"/>

        <Button
            android:text="Cancel"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:id="@+id/btnEditYardCancel"
            android:textColor="@android:color/background_light"
            android:background="@color/colorPrimaryDark"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="52dp"
            android:layout_alignTop="@+id/btnEditYardBack"
            android:layout_toEndOf="@+id/btnEditYardBack"/>

        <EditText
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/txtYardLandDescription"
            style="@style/Widget.AppCompat.EditText"
            android:singleLine="false"
            android:layout_height="200dp"
            android:layout_width="100dp"
            android:background="@drawable/edittextstyle"
            android:layout_weight="0.16"
            android:layout_below="@+id/txtYardLocation"
            android:layout_alignBottom="@+id/lblLandDescription"
            android:layout_alignEnd="@+id/txtYardLocation"
            android:layout_toEndOf="@+id/lblLandDescription"/>

        <Button
        android:text="Confirm"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:id="@+id/btnEditConfirm"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/lblLandDescription"
        android:layout_alignEnd="@+id/lblYardLocation"
        android:layout_marginTop="50dp"/>

        <Button
            android:text="Back"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:id="@+id/btnEditYardBack"
            android:textColor="@android:color/background_light"
            android:background="@color/colorPrimaryDark"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@+id/btnEditConfirm"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


</LinearLayout>
