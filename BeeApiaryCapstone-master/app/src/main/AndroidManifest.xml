<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tanisha.busy_bees_capstone_project">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Hives"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".Records" />
        <activity android:name=".NewRecord" />
        <activity android:name=".AddHive" />
        <activity android:name=".Yard" />
        <activity android:name=".AddYard" />
        <activity android:name=".AddBox" />
        <activity android:name=".RecordList" />
        <activity android:name=".Queen" />
        <activity android:name=".ReplaceQueen" />
        <activity android:name=".EditYard" />
        <activity android:name=".EditQueen"></activity>
    </application>

</manifest>